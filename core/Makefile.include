CC_PREFIX ?= pic30

CC	:= $(CC_PREFIX)-gcc
LD	:= $(CC_PREFIX)-gcc
AS	:= $(CC_PREFIX)-as
HX	:= $(CC_PREFIX)-bin2hex

LIBFLAGS := --start-group \
		$(patsubst lib%,-l%,$(LIBS)) \
		--end-group
#	       -lp$(subst f,F,$(MCU)) \

VPATH	:= ../core
OBJS	:= $(ASRCS:.c=.o) $(CSRCS:.c=.o)

CFLAGS	:= -mcpu=$(MCU) -mconst-in-code -finline-functions -O2 -Wall -I ../core/ -I .
LFLAGS	+= -mcpu=$(MCU) -Wl,-Map=$(TARGET:.hex=.map),--heap=32,--gc-sections,--warn-section-align \
           -Wl,--no-undefined,-T,p$(MCU).gld,--report-mem

DEBUG ?= 1
ifeq ($(DEBUG), 1)
CFLAGS += -g --debug -D__DEBUG
else
CFLAGS += -DNDEBUG -ffunction-sections -fdata-sections
endif

comma:= ,
empty:=
space:= $(empty) $(empty)

all :	target

target:	$(TARGET)

.PHONY:	clean
clean:
	rm -f $(TARGET) $(TARGET:.hex=.cof) $(TARGET:.hex=.map) $(OBJS) $(OBJS:.o=.d) $(CSRCS:.c=.s)

install: $(TARGET)
	pk2cmd -PPIC$(MCU) -F$(TARGET) -M -Z

.PHONY:	verify
verify:	$(TARGET)
	pk2cmd -PPIC$(MCU) -F$(TARGET) -Y

.PHONY: monitor
monitor:
	pk2serial -e

%.o :	%.c %.d
	$(CC) $(CFLAGS) -o $@ -c $<

%.s:	%.c %.d
	$(CC) $(CFLAGS) -o $@Â -S $<

$(TARGET):	$(OBJS)
	$(LD) $(LFLAGS) -o $(@:.hex=.cof) $^ $(LIBFLAGS)
	$(HX) $(@:.hex=.cof)

%.d:	%.c
	$(CC) $(CFLAGS) -MM $< -MT $@ -MT $(@:.d=.o) -MF $@

-include $(OBJS:.o=.d)

